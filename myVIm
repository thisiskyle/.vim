source $VIMRUNTIME/defaults.vim






" ---- My Super Awesome Custom sauce 

" turn on pathogen
execute pathogen#infect()

" my settings
set guioptions -=m
set guioptions -=T
set guioptions -=r
set guioptions -=L
set guifont=Courier\ Prime\ Code:h10
set lines=60
set columns=115
set nobackup
set nowritebackup
set noswapfile
set noundofile
set tabstop=4
set shiftwidth=4
set expandtab

" colors stuff
colorscheme zenburn
highlight Cursor guifg=black guibg=#e2b900
highlight iCursor guifg=black guibg=#e2b900
hi Search guibg=white guifg=black
"let g:airline_theme = "base16_monokai"
let g:airline_theme = "hybrid"

" keybindings
map <F12> :e $MYVIMRC<CR>
map <C-n> :NERDTreeToggle<CR>
map <C-s> :w<CR>
